import { RiMegaphoneFill } from "react-icons/ri";
import { GiCrafting, GiLargePaintBrush } from "react-icons/gi";

const servicio = [
  {
    title: "DESARROLLO WEB",
    img: FaLaptopCode,
  },
  {
    title: "REDES SOCIALES",
    img: IoIosPhonePortrait,
  },
  {
    title: "FOTOGRAFIA",
    img: IoCamera,
  },
  {
    title: "RECORRIDO 360",
    img: MdOutline360,
  },
  {
    title: "DISEÑO GRÁFICO",
    img: MdDesignServices,
  },
  {
    title: "MUSICALIZACIÓN",
    img: FaHeadphones,
  },
  {
    title: "PAUTA PUBLICITARIA",
    img: RiMegaphoneFill,
  },
  {
    title: "CONTENT CREATOR",
    img: GiCrafting,
  },
  {
    title: "IDENTIDAD DE MARCA",
    img: MdOutlineBrandingWatermark,
  },
  {
    title: "FILMAKER",
    img: IoMdFilm,
  },
  {
    title: "EDITOR DE VIDEOS",
    img: MdSlowMotionVideo,
  },
  {
    title: "DEPTO.CREATIVO",
    img: GiLargePaintBrush,
  },
];

