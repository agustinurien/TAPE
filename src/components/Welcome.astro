<main>
  <div class="contenedor">
    
    <div class="centro">
      <img src={Logo.src} alt="logo" class="logoHome">
      <Rueda client:load />
    </div>
  </div>
  <div class="curveContainer">
    <img src={curve.src} alt="curve" class="curveHome">
    <h3>No hacemos <br> magia, hacemos <br> <strong>estrategia</strong>.</h3>
  </div>
  <div class="servicios">
    {
      servicio.map((servicio) => (
        <div class="servicio">
          <div class="servicio-img">
            <servicio.img style={{ fontSize: 70, color: "black" }} />
          </div>
          
          <h2>{servicio.title}</h2>
        </div>
      ))
    }
  </div>
  <div>
    

  </div>
</main>



<style>
  .contenedor {
    
    width: 100%;
    height: 80vh;
    overflow: hidden;
    background-color: #e1dbc9;
    display: flex;
    justify-content: center;
    align-items: flex-end;
    
  }
  .centro{
    position: relative;
    height: 700px;
    width: 700px;
    padding-right: 20px;

  }
  .logoHome{
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
  .servicios {
    padding: 50px 200px;
    height: fit-content;
    background-color: #d6101d;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }
  .servicio {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: fit-content;
    width: 190px;
  }
  .servicio-img {
    width: 120px;
    height: 120px;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    background-color: beige;
  }
  
  .servicio h2 {
    font-family: "GothamBook", "Gotham", sans-serif;
    font-weight: 400;
    font-size: 1rem;
    color: #ffffff;
    text-align: center;
    height: 40px;
    transform: rotate(-10deg);
  }
  .curveContainer{
    position: relative;
    height: 100%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .curveHome{
    width: 100%;
    height: 100%;
    object-fit: cover;
    transform: scale(1.05);
  }
  .curveContainer h3{
    z-index: 2;
    position: absolute;
    top: 0;
    bottom: 0;
    text-align: center;
    font-size: 1.5rem;
    font-family: "GothamBold", "Gotham", sans-serif;
    font-weight: 700;

  }
  strong{
    color: #d6101d
  }
</style>
